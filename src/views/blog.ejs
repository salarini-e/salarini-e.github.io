<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- CSS Files -->
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/novo/index.css">
    <link rel="stylesheet" href="/novo/novo-style.css">
    <link rel="stylesheet" href="/css/animacao.css">
    <link rel="stylesheet" href="/css/index-styles.css">
    <link rel="stylesheet" href="/css/blog-styles.css">
    <link rel="stylesheet" href="/css/common-styles.css">

    <!-- Importação das fontes -->
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Cabin+Sketch:wght@400;700&family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Noto+Sans+SC:wght@100..900&family=Prosto+One&display=swap" rel="stylesheet">
    
    <script>
      // Redireciona para versão mobile se for tela pequena
      if (window.location.pathname === "/" || window.location.pathname === "/index.html") {
        if (window.innerWidth < 768) {
          window.location.href = "/m/index.html";
        }
      }
    </script>
</head>
<body>
    <!-- Preloader -->
    <%- include('partials/preloader') %>

    <!-- Modal customizado do menu -->
    <%- include('partials/menu-modal') %>

    <!-- Canvas de fundo -->
    <canvas id="canvas" class="background-canvas"></canvas>
    <div class="background-filter"></div>
    
    <!-- Botão flutuante do menu -->
    <div class="floating-menu-pill" id="openMenuModal">
        <button class="btn menu" type="button" tabindex="0">
            <i class="fa-solid fa-bars"></i>
        </button>
        <span class="floating-menu-pill-text">Menu</span>
    </div>

    <main class="container-fluid my-5 custom-animated slide-in-up custom-hidden">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10 col-xl-8">
                <!-- Header do Blog -->
                <div class="blog-header text-center mb-5 custom-animated fade-in-scale custom-hidden">
                    <h1 class="display-4 mb-3 page-title">Últimos Artigos</h1>
                    <p class="lead page-subtitle">Compartilhando conhecimento sobre tecnologia, desenvolvimento e inovação</p>
                </div>

                <!-- Barra de Busca -->
                <div class="search-container mb-5 custom-animated slide-in-left custom-hidden">
                    <div class="input-group">
                        <input type="text" class="form-control search-input" placeholder="Buscar artigos...">
                        <button class="btn search-btn" type="button">
                            <i class="fa-solid fa-search"></i>
                        </button>
                    </div>
                </div>

                <!-- Grid de Artigos -->
                <div id="articlesList" class="row g-4 custom-animated slide-in-right custom-hidden">
                    <!-- Os artigos serão carregados aqui via JavaScript -->
                </div>

                <!-- Categorias -->
                <div class="categories-section mt-5 custom-animated fade-in custom-hidden">
                    <h3 class="mb-3 section-header">Categorias</h3>
                    <div class="categories-tags">
                        <span class="category-tag">Tecnologia</span>
                        <span class="category-tag">Desenvolvimento</span>
                        <span class="category-tag">Python</span>
                        <span class="category-tag">JavaScript</span>
                        <span class="category-tag">React</span>
                        <span class="category-tag">DevOps</span>
                        <span class="category-tag">Banco de Dados</span>
                        <span class="category-tag">Ciência de Dados</span>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="text-center py-4 custom-animated slide-in-up custom-hidden custom-footer">
        <div class="container">
            <p class="mb-1 footer-copyright">&copy; 2025 Eduardo Salarini. Todos os direitos reservados.</p>
            <p class="mb-0">
                <a href="/politica-de-privacidade" class="footer-link">Política de Privacidade</a>
                <span class="mx-2 footer-separator">|</span>
                <a href="/contato" class="footer-link">Contato</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>

    <script>
        // Função para carregar artigos (simulando dados)
        function loadArticles() {
            const articlesList = document.getElementById('articlesList');
            
            // Artigos de exemplo
            const articles = [
                {
                    title: "Type Hints no Python: Melhorando a Qualidade do Seu Código",
                    description: "Aprenda a usar Type Hints no Python para melhorar a legibilidade e manutenção do código.",
                    date: "15 Jan 2025",
                    image: "https://via.placeholder.com/400x200/3B82F6/FFFFFF?text=Type+Hints",
                    categories: ["Python", "Backend"],
                    link: "/blog/artigo/type-hints-python.html"
                },
                {
                    title: "GraphQL com Django e FastAPI",
                    description: "Aprenda a implementar GraphQL com Django e FastAPI. Guia completo com exemplos práticos.",
                    date: "12 Jan 2025",
                    image: "https://via.placeholder.com/400x200/E11D48/FFFFFF?text=GraphQL",
                    categories: ["GraphQL", "Django", "FastAPI"],
                    link: "/blog/artigo/graphql-django-fastapi.html"
                },
                {
                    title: "Vale a pena ter um blog em 2025?",
                    description: "Uma reflexão sobre a relevância de ter um blog em 2025, considerando as tendências digitais e hábitos de consumo de conteúdo.",
                    date: "10 Jan 2025",
                    image: "https://via.placeholder.com/400x200/F59E0B/FFFFFF?text=Blog+2025",
                    categories: ["Reflexão", "Blog", "Conteúdo Digital"],
                    link: "/blog/artigo/vale-a-pena-ter-blog-2025.html"
                },
                {
                    title: "De Procedural a Orientado a Objetos: A Transformação do Seu Código",
                    description: "Entenda as vantagens de usar a Programação Orientada a Objetos (POO) em vez de uma abordagem procedural para organizar o código.",
                    date: "08 Jan 2025",
                    image: "https://via.placeholder.com/400x200/10B981/FFFFFF?text=POO",
                    categories: ["POO", "Fundamentos", "JavaScript"],
                    link: "/blog/artigo/procedural-orientado-objetos.html"
                },
                {
                    title: "React 18: Novidades e Melhores Práticas",
                    description: "Descubra as principais funcionalidades do React 18 e como aplicar as melhores práticas em seus projetos.",
                    date: "05 Jan 2025",
                    image: "https://via.placeholder.com/400x200/06B6D4/FFFFFF?text=React+18",
                    categories: ["React", "Frontend"],
                    link: "#"
                },
                {
                    title: "Ciência de Dados com Python: Guia Completo",
                    description: "Um guia abrangente sobre análise de dados usando pandas, numpy e matplotlib para insights poderosos.",
                    date: "02 Jan 2025",
                    image: "https://via.placeholder.com/400x200/8B5CF6/FFFFFF?text=Data+Science",
                    categories: ["Python", "Ciência de Dados"],
                    link: "#"
                }
            ];

            // Limpar container
            articlesList.innerHTML = '';

            // Gerar cards dos artigos
            articles.forEach((article, index) => {
                const articleCard = `
                    <div class="col-md-6 col-lg-4">
                        <div class="article-card h-100">
                            <div class="article-image article-image-${index}">
                                <div class="article-date">
                                    <i class="fa-solid fa-calendar me-1"></i>
                                    ${article.date}
                                </div>
                            </div>
                            <div class="p-4">
                                <h5 class="article-title">${article.title}</h5>
                                <p class="article-description mb-3">${article.description}</p>
                                <div class="article-meta">
                                    <span><i class="fa-solid fa-tags me-1"></i>${article.categories.join(', ')}</span>
                                    <span><i class="fa-solid fa-clock me-1"></i>5 min</span>
                                </div>
                                <div class="mt-3">
                                    <a href="${article.link}" class="btn btn-outline-warning btn-sm">
                                        Ler mais <i class="fa-solid fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                articlesList.innerHTML += articleCard;
            });
        }

        // Carregar artigos quando a página carrega
        document.addEventListener('DOMContentLoaded', function() {
            loadArticles();
            
            // Busca
            const searchInput = document.querySelector('.search-input');
            const searchBtn = document.querySelector('.search-btn');
            
            function performSearch() {
                const query = searchInput.value.toLowerCase();
                console.log('Buscando por:', query);
                // Aqui você implementaria a lógica de busca real
            }
            
            searchBtn.addEventListener('click', performSearch);
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    performSearch();
                }
            });

            // Filtro por categoria
            const categoryTags = document.querySelectorAll('.category-tag');
            categoryTags.forEach(tag => {
                tag.addEventListener('click', function() {
                    const category = this.textContent;
                    console.log('Filtrando por categoria:', category);
                    // Aqui você pode implementar a lógica de filtro real
                });
            });
        });
    </script>
    
</body>
</html>
